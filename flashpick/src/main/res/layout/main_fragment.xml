<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:id="@+id/buttonGreeting"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textViewGreeting"
            android:layout_below="@+id/buttonGreeting"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="change locale to EN"
            android:id="@+id/localeEN"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/buttonGreeting"
            android:layout_toEndOf="@+id/buttonGreeting"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="change locale to pl"
            android:id="@+id/localePL"
            android:layout_alignTop="@+id/textViewGreeting"
            android:layout_alignRight="@+id/localeEN"
            android:layout_alignEnd="@+id/localeEN"/>
</RelativeLayout>